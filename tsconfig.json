{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@extensions/*": [
        "extensions/*"
      ],
      "@Core/*": [
        "Core/*"
      ],
      "@Infrastructure/*": [
        "Infrastructure/*"
      ],
      "@Presentation/*": [
        "Presentation/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "sourceMap": true,
    "inlineSources": true,
    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}